# =============================================================================
# Ancestral Vision - Production Environment
# =============================================================================
# These values should be set via GCP Secret Manager or environment variables
# in Cloud Run. This file is for documentation purposes only.

# -----------------------------------------------------------------------------
# Database (Cloud SQL PostgreSQL)
# -----------------------------------------------------------------------------
# For Cloud Run, use Unix socket connection:
# DATABASE_URL="postgresql://user:pass@/ancestral_vision?host=/cloudsql/project:region:instance"
DATABASE_URL="postgresql://user:password@localhost:5432/ancestral_vision"

# -----------------------------------------------------------------------------
# Firebase Client Configuration (public - included in client bundle)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_FIREBASE_API_KEY="your-production-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="ancestral-vision.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="ancestral-vision-prod"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="ancestral-vision-prod.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# -----------------------------------------------------------------------------
# Firebase Admin SDK (server-side only)
# -----------------------------------------------------------------------------
# In production, prefer using default credentials via Workload Identity
# or store the service account JSON in Secret Manager
FIREBASE_ADMIN_PROJECT_ID="ancestral-vision-prod"
FIREBASE_ADMIN_CLIENT_EMAIL="firebase-adminsdk@ancestral-vision-prod.iam.gserviceaccount.com"
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"

# -----------------------------------------------------------------------------
# AI Services (Vertex AI in production)
# -----------------------------------------------------------------------------
# Vertex AI uses default credentials via Workload Identity in GCP
GOOGLE_CLOUD_PROJECT="ancestral-vision-prod"
GOOGLE_CLOUD_REGION="us-central1"

# -----------------------------------------------------------------------------
# Cloud Storage
# -----------------------------------------------------------------------------
GCS_BUCKET_NAME="ancestral-vision-prod-media"

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV="production"

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NEXTAUTH_URL="https://ancestralvision.com"
